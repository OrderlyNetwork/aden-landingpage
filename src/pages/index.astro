        <a
          href="#"
          class="text-white/90 hover:text-white text-base font-pretendard"
        >
          Trade
        </a>
        <a
          href="#"
          class="text-white/90 hover:text-white text-base font-pretendard"
        >
          Support
        </a>
      </div>

      <!-- Desktop Language Selector -->
      <div
        class="hidden md:flex items-center bg-aden-dark/40 border border-white/[0.06] rounded-[26px] p-2"
      >
        <div
          class="px-4 py-2 rounded-[18px] text-aden-text-muted font-play text-sm font-bold"
        >
          KR
        </div>
        <div
          class="px-4 py-2 rounded-[18px] bg-aden-primary text-white font-play text-sm font-bold"
        >
          EN
        </div>
