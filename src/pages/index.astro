        <div class="h-[343px] md:h-[400px] w-full lg:flex-1 border-[8px] border-white/[0.12] bg-black/[0.04] rounded-[20px] relative overflow-hidden">
          <div class="w-full h-[258px] absolute left-0 top-[85px] md:top-[142px] backdrop-blur-[3px]"></div>
          <div class="w-[240px] h-[240px] md:w-[340px] md:h-[340px] absolute left-1/2 top-[52px] md:top-[30px] transform -translate-x-1/2">
            <img
              src="https://cdn.builder.io/api/v1/image/assets/TEMP/ad33659c33381eac40061641b81f19d65a13ad9f?width=480"
              alt="Bitcoin trading"
              class="w-full h-full object-contain"
            />
          </div>
        </div>

        <!-- Features List -->
        <div class="flex flex-col justify-center items-start gap-6 w-full lg:flex-1">
          <div class="flex flex-col items-start gap-3 w-full">
            <div class="flex justify-between items-center w-full">
