      <!-- Mobile Navigation and Language Selector -->
      <div class="md:hidden flex items-center gap-4">
        <div class="flex items-center gap-4">
          <a
            href="#"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            Trade
          </a>
          <a
            href="#"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            Docs
          </a>
          <a
            href="#"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            Support
          </a>
        </div>
        <div class="flex items-center gap-1 px-2 py-[6px] border border-white/[0.12] bg-white/[0.04] backdrop-blur-[6px] rounded-[10px] shadow-[0px_1px_2px_0px_rgba(13,13,18,0.06)]">
          <span class="text-[#E8E8E8]/80 text-center font-play text-xs font-bold leading-4">
            KR
          </span>
          <svg
            width="8"
            height="8"
            viewBox="0 0 8 8"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
