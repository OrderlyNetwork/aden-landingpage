  <!-- Hero Section -->
  <section
    class="relative h-[812px] md:h-[1024px] flex flex-col items-center justify-center px-4 md:px-[100px] pt-[30px] md:pt-[130px] pb-[200px] md:pb-0 gap-[100px] overflow-hidden"
  >
    <!-- Background Sky -->
    <div class="absolute inset-0 w-full h-[770px]">
      <!-- Orange Gradient Blur - Mobile -->
      <div
        class="md:hidden absolute left-0 top-[-107px] w-[374px] h-[213px] rounded-full bg-aden-primary blur-[250px]"
      >
      </div>

      <!-- Circular Gradient Overlay - Mobile -->
      <div
        class="md:hidden absolute left-1/2 top-[-30px] transform -translate-x-1/2 w-[400px] h-[250px] rounded-full bg-gradient-to-b from-black/80 to-transparent blur-[80px]"
      >
      </div>

      <!-- Orange Gradient Blur - Desktop -->
      <div
        class="hidden md:block absolute left-1/2 top-[-210px] transform -translate-x-1/2 w-[728px] h-[414px] rounded-full bg-aden-primary blur-[250px]"
      >
      </div>

      <!-- Desktop Coins and Sky -->
      <img
        src="/shiny_coins_loop.webp"
        alt="Sky background"
        class="hidden md:block absolute left-[100px] top-[142px] w-[1240px] h-[882px] object-cover"
      />
      <img
        src="/sky_background.webp"
        alt="Sky overlay"
        class="hidden md:block absolute left-0 top-0 w-full h-[924px] object-cover"
      />

      <!-- Dark Gradient Blur - Mobile -->
      <div
        class="md:hidden absolute left-[-176px] top-[178px] w-[728px] h-[414px] rounded-full bg-aden-dark blur-[250px]"
      >
      </div>

      <!-- Dark Gradient Blur - Desktop -->
      <div
        class="hidden md:block absolute left-1/2 top-[305px] transform -translate-x-1/2 w-[728px] h-[414px] rounded-full bg-aden-dark blur-[250px]"
      >
      </div>

      <!-- Mobile Coins Background - Bottom Aligned -->
      <div
        class="md:hidden absolute bottom-0 left-0 w-full h-[350px] flex items-end justify-center overflow-hidden"
      >
        <img
          src="/shiny_coins_loop.webp"
          alt="Coins background"
          class="w-full h-full object-cover object-bottom"
        />
      </div>
    </div>

    <!-- Hero Content -->
    <div
      class="relative z-10 flex flex-col items-center gap-[50px] w-full max-w-[343px] md:max-w-[1240px] mt-[198px] md:mt-[-20rem]"
    >
      <!-- Text Content -->
      <div class="flex flex-col items-center gap-10 md:gap-10 w-full">
        <div class="flex flex-col items-center gap-5 w-full">
          <!-- Badge -->
          <div
            class="flex items-center justify-center gap-3 px-3 py-2 bg-white/[0.12] backdrop-blur-[2px] rounded-xl"
          >
            <span
              class="text-white text-center font-pretendard text-xs md:text-sm font-medium leading-4 md:leading-5"
            >
              DEX Crypto Futures Trading Platform
            </span>
          </div>

          <!-- Main Heading -->
          <h1
            class="text-center font-pretendard text-[40px] md:text-6xl font-bold leading-[52px] md:leading-[80px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent w-full"
          >
            A Pro-Grade Order Book DEX for Everyone
          </h1>

          <!-- Description -->
          <p
            class="w-full md:max-w-[678px] text-white/60 text-center font-pretendard text-[13px] md:text-lg leading-5 md:leading-7"
          >
            The convenience of a centralized exchange order book system combined
            with the freedom of decentralization. Easy for beginners, more
            powerful for experts.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex items-center gap-3 w-full md:w-auto md:justify-center">
          <button
            class="flex items-center justify-center gap-2 h-12 md:h-[52px] px-6 py-2 bg-aden-primary rounded-[10px] shadow-[0px_1px_2px_0px_rgba(13,13,18,0.06)] flex-1 md:flex-initial"
          >
            <span
              class="text-white text-center font-pretendard text-[13px] md:text-base font-bold leading-5 md:leading-6"
            >
              Start Trading →
            </span>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="py-10 md:py-10">
    <div class="flex flex-col items-center gap-12 px-4">
      <div
        class="flex flex-col md:flex-row justify-center items-center gap-6 md:gap-6 w-full max-w-6xl py-10 md:py-16 border-t border-b border-white/50 px-4 md:px-0"
      >
        <div class="flex flex-col items-center gap-1 md:gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[52px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            $1.2B+
          </h3>
          <p
            class="text-aden-text-muted text-center font-pretendard text-[13px] md:text-base leading-5 md:leading-6"
          >
            Cumulative Trading Volume
          </p>
        </div>
        <div class="flex flex-col items-center gap-1 md:gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[52px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            85K+
          </h3>
          <p
            class="text-aden-text-muted text-center font-pretendard text-[13px] md:text-base leading-5 md:leading-6"
          >
            Active Traders
          </p>
        </div>
        <div class="flex flex-col items-center gap-1 md:gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[52px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            150+
          </h3>
          <p
            class="text-aden-text-muted text-center font-pretendard text-[13px] md:text-base leading-5 md:leading-6"
          >
            Tradable Markets
          </p>
        </div>
        <div class="flex flex-col items-center gap-1 md:gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[52px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            $125M
          </h3>
          <p
            class="text-aden-text-muted text-center font-pretendard text-[13px] md:text-base leading-5 md:leading-6"
          >
            Daily Trading Volume
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section
    class="py-10 md:py-[100px] px-4 md:px-[100px] relative overflow-hidden"
  >
    <!-- Strong Yellow Gradient -->
    <div class="absolute inset-0 pointer-events-none">
      <!-- <div
        class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[900px] h-[700px] bg-gradient-radial from-aden-primary/80 via-yellow-500/40 to-transparent blur-[200px]"
      >
      </div> -->
      <div
        class="absolute left-0 top-[400px] w-full h-[500px] bg-aden-primary/40 blur-[180px] rounded-full"
      >
      </div>
    </div>

    <div
      class="flex flex-col items-center md:items-center gap-10 md:gap-20 w-full relative z-10"
    >
      <!-- Section Header -->
      <div class="flex flex-col items-center md:items-start gap-4 w-full">
        <div
          class="flex items-center px-3 py-[6px] bg-aden-dark-card rounded-2xl"
        >
          <span
            class="text-white text-center font-pretendard text-xs md:text-sm font-bold leading-4 md:leading-5 tracking-[0.12px] md:tracking-[0.14px]"
          >
            Features
          </span>
        </div>
        <h2
          class="font-pretendard text-[28px] md:text-5xl font-bold leading-10 md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent text-center md:text-left"
        >
          Why ADEN?
        </h2>
      </div>

      <!-- Features Grid -->
      <div
        class="flex flex-col items-start gap-[10px] w-full p-4 md:p-6 border border-white/[0.12] bg-black/[0.04] rounded-3xl"
      >
        <div
          class="flex flex-col lg:flex-row items-start gap-0 md:gap-6 w-full"
        >
          <!-- Feature Card 1 -->
          <div
            class="flex flex-col items-start gap-5 md:gap-10 flex-1 p-6 rounded-3xl w-full"
          >
            <div
              class="w-6 h-6 md:w-[62px] md:h-[62px] bg-aden-dark-card rounded-[10px] flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="26"
                fill="none"
                ><path
                  fill="#EDA320"
                  d="M3.017 13.432v-1.179A5.91 5.91 0 0 1 8.92 6.35h8.855l-.653.653a1.402 1.402 0 1 0 1.983 1.984l3.045-3.045c.257-.269.409-.619.409-.992s-.152-.723-.409-.992L19.105.913a1.402 1.402 0 1 0-1.983 1.984l.653.653H8.92C4.125 3.55.217 7.458.217 12.253v1.179c0 .77.63 1.4 1.4 1.4.77 0 1.4-.619 1.4-1.4Zm19.367-2.264c-.77 0-1.4.63-1.4 1.4v1.179a5.91 5.91 0 0 1-5.904 5.903H6.225l.653-.653a1.403 1.403 0 0 0-1.983-1.984L1.85 20.058a1.366 1.366 0 0 0-.408.992c0 .373.151.723.408.992l3.045 3.045a1.405 1.405 0 0 0 1.983 0 1.401 1.401 0 0 0 0-1.984l-.653-.653h8.855c4.795 0 8.704-3.908 8.704-8.703v-1.179c0-.781-.63-1.4-1.4-1.4Z"
