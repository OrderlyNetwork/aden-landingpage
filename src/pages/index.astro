      <!-- Mobile Navigation and Language Selector -->
      <div class="md:hidden flex items-center gap-4">
        <div class="flex items-center gap-4">
          <a
            href="#"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            Trade
          </a>
          <a
            href="#"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            Support
          </a>
        </div>
        <div
          class="flex items-center gap-1 px-2 py-[6px] border border-white/[0.12] bg-white/[0.04] backdrop-blur-[6px] rounded-[10px] shadow-[0px_1px_2px_0px_rgba(13,13,18,0.06)]"
        >
          <span
            class="text-[#E8E8E8]/80 text-center font-play text-xs font-bold leading-4"
          >
            KR
          </span>
          <svg
            width="8"
            height="8"
            viewBox="0 0 8 8"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M1.47718 2.83731C1.56704 2.73248 1.72486 2.72033 1.82969 2.81019L4.00033 4.67074L6.17097 2.81019C6.2758 2.72034 6.43362 2.73248 6.52348 2.83731C6.61333 2.94214 6.60119 3.09996 6.49636 3.18982L4.16303 5.18982C4.06941 5.27007 3.93125 5.27007 3.83763 5.18982L1.5043 3.18982C1.39947 3.09996 1.38733 2.94214 1.47718 2.83731Z"
