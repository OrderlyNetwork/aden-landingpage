  <!-- Hero Section -->
  <section class="relative h-[812px] md:h-[1024px] flex flex-col items-center justify-center px-4 md:px-[100px] pt-[30px] md:pt-[130px] gap-[100px] overflow-hidden">
    <!-- Background Sky -->
    <div class="absolute inset-0 w-full h-[770px]">
      <!-- Orange Gradient Blur - Mobile -->
      <div class="md:hidden absolute left-0 top-[-107px] w-[374px] h-[213px] rounded-full bg-aden-primary blur-[250px]"></div>

      <!-- Orange Gradient Blur - Desktop -->
      <div class="hidden md:block absolute left-1/2 top-[-210px] transform -translate-x-1/2 w-[728px] h-[414px] rounded-full bg-aden-primary blur-[250px]"></div>

      <!-- Sky Images - Mobile -->
      <img
        src="https://cdn.builder.io/api/v1/image/assets/TEMP/42444440e2ca6db5e560b23a3d3aa62bbe895819?width=1499"
        alt="Sky background mobile"
        class="md:hidden absolute left-[-187px] top-[237px] w-[750px] h-[533px] object-cover"
      />
      <img
        src="https://cdn.builder.io/api/v1/image/assets/TEMP/370ebca98a83373a0fedc446538d09781c7763d1?width=1380"
        alt="Sky overlay mobile"
        class="md:hidden absolute left-[-690px] top-0 w-[690px] h-[924px] object-cover"
      />

      <!-- Sky Images - Desktop -->
      <img
        src="https://cdn.builder.io/api/v1/image/assets/TEMP/2cd7fcbc8463bd8bd0008307bd3abf8f8e3ad179?width=2481"
        alt="Sky background"
        class="hidden md:block absolute left-[100px] top-[142px] w-[1240px] h-[882px] object-cover"
      />
      <img
        src="https://cdn.builder.io/api/v1/image/assets/TEMP/6f837b2e9d551a11a345680db4ea71e5a3a76694?width=2880"
        alt="Sky overlay"
        class="hidden md:block absolute left-0 top-0 w-full h-[924px] object-cover"
      />

      <!-- Dark Gradient Blur - Mobile -->
      <div class="md:hidden absolute left-[-176px] top-[178px] w-[728px] h-[414px] rounded-full bg-aden-dark blur-[250px]"></div>

      <!-- Dark Gradient Blur - Desktop -->
      <div class="hidden md:block absolute left-1/2 top-[305px] transform -translate-x-1/2 w-[728px] h-[414px] rounded-full bg-aden-dark blur-[250px]"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 flex flex-col items-center gap-[50px] w-full max-w-[343px] md:max-w-[1240px] mt-[198px] md:mt-[200px]">
      <!-- Text Content -->
      <div class="flex flex-col items-center gap-10 md:gap-10 w-full">
        <div class="flex flex-col items-center gap-5 w-full">
          <!-- Badge -->
          <div class="flex items-center justify-center gap-3 px-3 py-2 bg-white/[0.12] backdrop-blur-[2px] rounded-xl">
            <span class="text-white text-center font-pretendard text-xs md:text-sm font-medium leading-4 md:leading-5">
              DEX Crypto Futures Trading Platform
            </span>
          </div>

          <!-- Main Heading -->
          <h1 class="text-center font-pretendard text-[40px] md:text-6xl font-bold leading-[52px] md:leading-[80px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent w-full">
            A Pro-Grade Order Book DEX for Everyone
          </h1>

          <!-- Description -->
          <p class="w-full md:max-w-[678px] text-white/60 text-center font-pretendard text-[13px] md:text-lg leading-5 md:leading-7">
            The convenience of a centralized exchange order book system
            combined with the freedom of decentralization. Easy for
            beginners, more powerful for experts.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex items-center gap-3 w-full md:w-auto md:justify-center">
          <button class="flex items-center justify-center gap-2 h-12 md:h-[52px] px-6 py-2 bg-aden-primary rounded-[10px] shadow-[0px_1px_2px_0px_rgba(13,13,18,0.06)] flex-1 md:flex-initial">
            <span class="text-white text-center font-pretendard text-[13px] md:text-base font-bold leading-5 md:leading-6">
              Start Trading →
            </span>
          </button>
          <button class="flex items-center justify-center gap-2 h-12 md:h-[52px] px-6 py-2 border border-white/[0.12] bg-white/[0.04] backdrop-blur-[6px] rounded-[10px] shadow-[0px_1px_2px_0px_rgba(13,13,18,0.06)] flex-1 md:flex-initial">
            <span class="text-white text-center font-pretendard text-[13px] md:text-base font-bold leading-5 md:leading-6">
              Explore the Platform
            </span>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="py-10 md:py-10">
    <div class="flex flex-col items-center gap-12 px-4">
      <div class="flex flex-col md:flex-row justify-center items-center gap-6 md:gap-6 w-full max-w-6xl py-10 md:py-16 border-t border-b border-white/50 px-4 md:px-0">
        <div class="flex flex-col items-center gap-1 md:gap-2 w-[280px]">
          <h3 class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[52px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent">
            $1.2B+
          </h3>
          <p class="text-aden-text-muted text-center font-pretendard text-[13px] md:text-base leading-5 md:leading-6">
            Cumulative Trading Volume
          </p>
        </div>
        <div class="flex flex-col items-center gap-1 md:gap-2 w-[280px]">
          <h3 class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[52px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent">
            85K+
          </h3>
          <p class="text-aden-text-muted text-center font-pretendard text-[13px] md:text-base leading-5 md:leading-6">
            Active Traders
          </p>
        </div>
        <div class="flex flex-col items-center gap-1 md:gap-2 w-[280px]">
          <h3 class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[52px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent">
            150+
          </h3>
          <p class="text-aden-text-muted text-center font-pretendard text-[13px] md:text-base leading-5 md:leading-6">
            Tradable Markets
          </p>
        </div>
        <div class="flex flex-col items-center gap-1 md:gap-2 w-[280px]">
          <h3 class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[52px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent">
            $125M
          </h3>
          <p class="text-aden-text-muted text-center font-pretendard text-[13px] md:text-base leading-5 md:leading-6">
            Daily Trading Volume
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-10 md:py-[100px] px-4 md:px-[100px]">
    <div class="flex flex-col items-center md:items-center gap-10 md:gap-20 w-full">
      <!-- Section Header -->
      <div class="flex flex-col items-center md:items-start gap-4 w-full">
        <div class="flex items-center px-3 py-[6px] bg-aden-dark-card rounded-2xl">
          <span class="text-white text-center font-pretendard text-xs md:text-sm font-bold leading-4 md:leading-5 tracking-[0.12px] md:tracking-[0.14px]">
            Features
          </span>
        </div>
        <h2 class="font-pretendard text-[28px] md:text-5xl font-bold leading-10 md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent text-center md:text-left">
          Why ADEN?
        </h2>
      </div>

      <!-- Features Grid -->
      <div class="flex flex-col items-start gap-[10px] w-full p-4 md:p-6 border border-white/[0.12] bg-black/[0.04] rounded-3xl">
        <div class="flex flex-col lg:flex-row items-start gap-0 md:gap-6 w-full">
          <!-- Feature Card 1 -->
          <div class="flex flex-col items-start gap-5 md:gap-10 flex-1 p-6 rounded-3xl w-full">
            <div class="w-6 h-6 md:w-[62px] md:h-[62px] bg-aden-dark-card rounded-[10px] flex items-center justify-center">
              <svg class="w-3 h-3 md:w-8 md:h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="#EDA320" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M2 17L12 22L22 17" stroke="#EDA320" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M2 12L12 17L22 12" stroke="#EDA320" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="flex flex-col items-start gap-1 md:gap-2 w-full">
              <h3 class="text-white font-pretendard text-xl md:text-2xl font-bold leading-8 md:leading-9">
                Seamless Asset Transfers Anytime
              </h3>
              <p class="text-aden-text-secondary font-pretendard text-[13px] md:text-base leading-5 md:leading-6 tracking-[-0.26px] md:tracking-[-0.32px]">
                Withdraw anytime with no delays or restrictions. Full
                control and true ownership of your assets.
              </p>
            </div>
          </div>

          <!-- Feature Card 2 -->
          <div class="flex flex-col items-start gap-5 md:gap-10 flex-1 p-6 rounded-3xl w-full">
            <div class="w-6 h-6 md:w-[62px] md:h-[62px] bg-aden-dark-card rounded-[10px] flex items-center justify-center">
              <svg class="w-3 h-3 md:w-8 md:h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 3V21H21" stroke="#EDA320" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M7 16L12 11L16 15L21 10" stroke="#EDA320" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="flex flex-col items-start gap-1 md:gap-2 w-full">
              <h3 class="text-white font-pretendard text-xl md:text-2xl font-bold leading-8 md:leading-9">
                CEX-Level Trading Experience
              </h3>
              <p class="text-aden-text-secondary font-pretendard text-[13px] md:text-base leading-5 md:leading-6">
                Market, limit, and conditional orders—just like a
                centralized exchange.
              </p>
            </div>
          </div>

          <!-- Feature Card 3 -->
          <div class="flex flex-col items-start gap-5 md:gap-10 flex-1 p-6 rounded-3xl w-full">
            <div class="w-6 h-6 md:w-[62px] md:h-[62px] bg-aden-dark-card rounded-[10px] flex items-center justify-center">
              <svg class="w-3 h-3 md:w-8 md:h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" stroke="#EDA320" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="flex flex-col items-start gap-1 md:gap-2 w-full">
              <h3 class="text-white font-pretendard text-xl md:text-2xl font-bold leading-8 md:leading-9">
                Optimized Trading Conditions
              </h3>
              <p class="text-aden-text-secondary font-pretendard text-[13px] md:text-base leading-5 md:leading-6">
                Low-cost, high-efficiency trading powered by automated
                infrastructure.
              </p>
            </div>
          </div>

          <!-- Feature Card 4 -->
          <div class="flex flex-col items-start gap-5 md:gap-10 flex-1 p-6 rounded-3xl w-full">
            <div class="w-6 h-6 md:w-[62px] md:h-[62px] bg-aden-dark-card rounded-[10px] flex items-center justify-center">
              <svg class="w-3 h-3 md:w-8 md:h-8" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="12" r="10" stroke="#EDA320" stroke-width="2"/>
                <path d="M9 12L11 14L15 10" stroke="#EDA320" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="flex flex-col items-start gap-1 md:gap-2 w-full">
              <h3 class="text-white font-pretendard text-xl md:text-2xl font-bold leading-8 md:leading-9">
                Instant Trades, No Complex Steps
              </h3>
              <p class="text-aden-text-secondary font-pretendard text-[13px] md:text-base leading-5 md:leading-6">
                Just connect your wallet to trade instantly. No KYC
                needed—global, private, and easy.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Professional Trading Platform Section -->
  <section class="py-10 md:py-[100px] px-4 md:px-[100px]">
    <div class="flex flex-col justify-center items-start gap-[70px] md:gap-[70px] w-full">
      <!-- Section Header -->
      <div class="flex flex-col items-center gap-5 md:gap-10 w-full">
        <div class="flex flex-col items-center gap-4 w-full">
          <div class="flex items-center px-3 py-[6px] bg-aden-dark-card rounded-2xl">
            <span class="text-white text-center font-pretendard text-xs md:text-sm font-bold leading-4 md:leading-5 tracking-[0.12px] md:tracking-[0.14px]">
              Highlights
            </span>
          </div>
          <h2 class="text-center font-pretendard text-[28px] md:text-5xl font-bold leading-10 md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent">
            Professional Trading Platform
          </h2>
        </div>

        <!-- Tab Navigation -->
        <div class="flex flex-col items-center justify-center gap-[10px] w-full px-0 md:px-[120px]">
          <div class="flex justify-center items-center w-full p-2 border border-white/[0.12] bg-black/[0.04] rounded-[34px]">
